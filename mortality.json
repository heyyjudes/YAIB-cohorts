{
  "mortality24": {
    "type": "task"
    "description": "ICU mortality after 24 hours",
    "time_unit": "hours",
    "time_step": 1,
    "time_max": 24,
    "input": {
      "type": "dynamic-sequential",
      "concepts": ["dbp", "hr", "map", "o2sat", "resp", "sbp", "temp"]  
    },
    "target": {
      "type": "static",
      "concepts": "death"
    }
    "exclusions": [
      {
        "type": "exclusion",
        "name": "extreme_age",
        "description": "aged < 16 or age > 89",
        "steps": [
          ["load", "age"],
          ["filter", ". < 16 | . > 89"]    
        ]
      },
      {
        "type": "exclusion",
        "name": "death_lt_30h",
        "description": "died less than 30 hours after ICU admission",
        "steps": [
          ["load", "target"],
          ["filter", ". < 30", "index_col"]    
        ]
      }, 
      {
        "type": "exclusion",
        "name": "los_lt_24h",
        "description": "discharged less than 24 hours after ICU admission",
        "steps": [
          ["load", "los_icu"],
          ["filter", ". < 1"]    
        ]
      }, 
      {
        "type": "exclusion",
        "name": "no_obs",
        "description": "discharged less than 24 hours after ICU admission",
        "steps": [
          ["load", "input"],
          ["filter", "within_obs_win"],
          ["setdiff"]
        ]
      }
    ]
  }
}